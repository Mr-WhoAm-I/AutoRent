<Window x:Class="CarRental.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="АрендаАвто - Главная" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown" FontFamily="Segoe UI">

    <Border CornerRadius="20" ClipToBounds="True" Background="#F5F7FA">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource MainBackgroundBrush}" CornerRadius="20,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,0" HorizontalAlignment="Center">
                        <Image Source="pack://application:,,,/CarRental.UI;component/Resources/Images/CarRental_Logo.png" 
                               Width="250" Margin="0,0,0,0" RenderOptions.BitmapScalingMode="HighQuality">
                            <Image.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="2" BlurRadius="5"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="АрендаАвто" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-60,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="1" BlurRadius="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="20,0">
                        <StackPanel.Resources>
                            <Style TargetType="RadioButton">
                                <Setter Property="Height" Value="50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Margin" Value="0,0,0,10"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border" CornerRadius="10" Background="Transparent" Padding="15,0">
                                                <Grid>
                                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                    <Setter Property="Foreground" Value="#1D976C"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </StackPanel.Resources>

                        <RadioButton x:Name="BtnManagerHome" Content="🏠  Главная" Tag="ManagerDashboardPage" Click="MenuButton_Click" Visibility="Collapsed"/>
                        <RadioButton x:Name="BtnMaintenance" Content="🛠️  Обслуживание" Tag="MaintenancePage" Click="MenuButton_Click" Visibility="Collapsed"/>
                        <RadioButton x:Name="BtnCars" Content="🚗  Автомобили" IsChecked="True" Tag="CarsPage" Click="MenuButton_Click"/>
                        <RadioButton x:Name="BtnRentals" Content="📄  Аренды" Tag="RentalsPage" Click="MenuButton_Click" Visibility="Collapsed"/>
                        <RadioButton x:Name="BtnClients" Content="👥  Клиенты" Tag="ClientsPage" Click="MenuButton_Click" Visibility="Collapsed"/>

                        <Rectangle x:Name="MenuSeparator" Height="1" Fill="White" Opacity="0.2" Margin="10,10,10,20" Visibility="Collapsed"/>

                        <RadioButton x:Name="BtnDashboard" Content="📊  Сводка" Tag="DashboardPage" Click="MenuButton_Click" Visibility="Collapsed"/>
                        <RadioButton x:Name="BtnReports" Content="📑  Отчеты" Tag="ReportsPage" Click="MenuButton_Click" Visibility="Collapsed"/>
                        <RadioButton x:Name="BtnDirectories" Content="📚  Справочники" Tag="DirectoriesPage" Click="MenuButton_Click" Visibility="Collapsed"/>
                        <RadioButton x:Name="BtnEmployees" Content="🔧  Сотрудники" Tag="EmployeesPage" Click="MenuButton_Click" Visibility="Collapsed"/>
                        <RadioButton x:Name="BtnArchive" Content="🗄  Архив" Tag="ArchivePage" Click="MenuButton_Click" Visibility="Collapsed"/>
                        <RadioButton x:Name="BtnLogs" Content="📜  Журнал событий" Tag="SystemLogsPage" Click="MenuButton_Click" Visibility="Collapsed"/>
                    </StackPanel>

                    <Grid Grid.Row="2" Margin="25,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="42" Height="42" CornerRadius="21" Background="White" Margin="0,0,12,0">
                            <TextBlock x:Name="UserInitialsText" Text="AD" 
                                       Foreground="#1D976C" FontWeight="Bold" FontSize="16" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="5" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="UserNameText" Text="Alex Doe" 
                                       Foreground="White" FontWeight="SemiBold" FontSize="15" 
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock x:Name="UserRoleText" Text="Frontend Lead" 
                                       Foreground="White" Opacity="0.7" FontSize="12" 
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <Button Grid.Column="2" Click="Logout_Click"
                                Width="30" Height="30"
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                ToolTip="Выйти из аккаунта">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="btnBorder" Background="{TemplateBinding Background}" CornerRadius="5">
                                        <Path x:Name="IconPath" 
                                              Data="M16 17v-3H9v-4h7V7l5 5-5 5M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2v-2h-2v2H6V4h8v2h2V4a2 2 0 0 0-2-2z" 
                                              Fill="White" Opacity="0.8" Stretch="Uniform" Width="18" Height="18"
                                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="btnBorder" Property="Background" Value="#20FFFFFF"/>
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter TargetName="IconPath" Property="Fill" Value="#FF6B6B"/>
                                            <Setter TargetName="IconPath" Property="Opacity" Value="1.0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="15" CenterY="15"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="Transparent" MouseDown="Window_MouseDown">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                        <Button Content="—" Style="{StaticResource WindowControlButtonStyle}" Foreground="#333" Click="Minimize_Click" Margin="0,0,10,0"/>
                        <Button Content="✕" Style="{StaticResource WindowControlButtonStyle}" Foreground="#333" Click="Close_Click"/>
                    </StackPanel>
                </Border>

                <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Margin="20" BorderThickness="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>