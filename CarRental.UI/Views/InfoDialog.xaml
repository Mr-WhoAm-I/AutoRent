<Window x:Class="CarRental.UI.Views.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown" FontFamily="Segoe UI">

    <Border CornerRadius="20" ClipToBounds="True" Background="{StaticResource MainBackgroundBrush}">
        <Border.BorderBrush>
            <SolidColorBrush Color="White" Opacity="0.2"/>
        </Border.BorderBrush>
        <Border.BorderThickness>1</Border.BorderThickness>

        <Grid>
            <Path Data="M0.5 23.04V1.54C0.5 -0.46 168.5 1.04 168.5 1.04C176.509 2.70338 183.575 8.52245 185 17.04L184.5 363.04C145.5 345.04 134.5 307.04 134.5 307.04C134.5 307.04 126.5 281.04 132 259.04C138.555 232.818 161 213.54 166.5 199.04C166.5 199.04 179.462 159.764 168.5 139.04C156.405 116.173 127.667 108.54 108.5 106.04C94.5 104.373 5 100.54 0.5 23.04Z"
                  Stretch="Fill"
                  VerticalAlignment="Top" HorizontalAlignment="Right"
                  Width="120" Height="200" Opacity="0.6">
                <Path.Fill>
                    <LinearGradientBrush StartPoint="0.8,0" EndPoint="0.2,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Path.Fill>
            </Path>

            <Path Data="M0.5 23.04V1.54C0.5 -0.46 168.5 1.04 168.5 1.04C176.509 2.70338 183.575 8.52245 185 17.04L184.5 363.04C145.5 345.04 134.5 307.04 134.5 307.04C134.5 307.04 126.5 281.04 132 259.04C138.555 232.818 161 213.54 166.5 199.04C166.5 199.04 179.462 159.764 168.5 139.04C156.405 116.173 127.667 108.54 108.5 106.04C94.5 104.373 5 100.54 0.5 23.04Z"
                  Stretch="Fill"
                  VerticalAlignment="Bottom" HorizontalAlignment="Left"
                  Width="120" Height="200" Opacity="0.4" RenderTransformOrigin="0.5,0.5">
                <Path.Fill>
                    <LinearGradientBrush EndPoint="0.2,1" StartPoint="0.8,0">
                        <GradientStop Color="#FF128FD2"/>
                        <GradientStop Color="#FF01D77D" Offset="1"/>
                    </LinearGradientBrush>
                </Path.Fill>
                <Path.RenderTransform>
                    <RotateTransform Angle="180"/>
                </Path.RenderTransform>
            </Path>

            <Button Content="✕" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15"
                    Foreground="White" Background="Transparent" BorderThickness="0" 
                    FontSize="16" Click="Close_Click" Cursor="Hand" Opacity="0.8">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

                <Path x:Name="IconPath" 
                      Data="{StaticResource CheckIconGeom}" 
                      Stroke="White"
                      StrokeThickness="2.5"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"
                      Stretch="Uniform" 
                      Width="64" Height="64" 
                      Margin="0,0,0,15">
                    <Path.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                    </Path.Effect>
                </Path>

                <TextBlock x:Name="TitleText" 
                           Text="Успех!" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="MessageText" 
                           Text="Операция выполнена успешно." 
                           Foreground="White" 
                           FontSize="14" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center" 
                           Opacity="0.9"
                           MaxWidth="300"
                           Margin="0,0,0,25"/>

                <Button x:Name="ActionButton"
                        Content="ОК" 
                        Style="{StaticResource TealButton}" 
                        Width="120" Height="40" FontSize="14"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>