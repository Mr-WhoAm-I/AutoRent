<Page x:Class="CarRental.UI.Views.Pages.CarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      Title="Автопарк" FontFamily="Segoe UI" Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="EditButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="5" ShadowDepth="0"/>
                            </Border.Effect>
                            <Path x:Name="icon" Data="{StaticResource EditIconGeom}" 
                                  Fill="#333" Stretch="Uniform" Margin="8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="icon" Property="Fill" Value="#FF9800"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="#F5F7FA" Margin="0,0,10,0" MouseDown="Page_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Автопарк" FontSize="26" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <hc:SearchBar x:Name="SearchBox" Grid.Column="0" 
                          Height="45" FontSize="14"
                          Style="{StaticResource SearchBarPlus}"
                          BorderThickness="0"
                          TextChanged="Filter_Changed"
                          hc:InfoElement.Placeholder="Поиск по модели..."
                          hc:InfoElement.ShowClearButton="True"/>

            <Border Grid.Column="2" Background="White" CornerRadius="10" Height="45" Padding="15,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="{StaticResource CalendarIconGeom}" Fill="{StaticResource GreenAccentBrush}" 
                          Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                    <TextBlock Text="доступность:" Foreground="{StaticResource GreenAccentBrush}" 
                               VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="SemiBold" FontSize="13"/>

                    <hc:DatePicker x:Name="DateStartPicker" Width="110" BorderThickness="0" Background="Transparent" 
                                   hc:InfoElement.Placeholder="С..." 
                                   hc:InfoElement.ShowClearButton="True"
                                   SelectedDateChanged="Filter_Changed"/>

                    <TextBlock Text="→" Margin="10,0" VerticalAlignment="Center" Foreground="#CCC"/>

                    <hc:DatePicker x:Name="DateEndPicker" Width="110" BorderThickness="0" Background="Transparent" 
                                   hc:InfoElement.Placeholder="По..." 
                                   hc:InfoElement.ShowClearButton="True"
                                   SelectedDateChanged="Filter_Changed"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="4" Orientation="Horizontal">
                <RadioButton x:Name="ViewGridBtn" GroupName="ViewType" IsChecked="True" Checked="ViewType_Changed"
                             Style="{StaticResource ViewToggleButtonStyle}" ToolTip="Плитка">
                    <Path Data="{StaticResource GridIconGeom}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" 
                          Width="16" Height="16" Stretch="Uniform"/>
                </RadioButton>
                <RadioButton x:Name="ViewListBtn" GroupName="ViewType" Checked="ViewType_Changed"
                             Style="{StaticResource ViewToggleButtonStyle}" ToolTip="Список">
                    <TextBlock Text="☰" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </RadioButton>
            </StackPanel>

            <Button x:Name="BtnAdd" Grid.Column="5" Content="+ Добавить" 
                    Background="{StaticResource GreenGradientBrush}" BorderThickness="0"
                    Foreground="White" FontSize="14" FontWeight="SemiBold"
                    Width="140" Height="45" Margin="10,0,10,0"
                    Style="{StaticResource ButtonPrimary}"
                    Click="BtnAdd_Click"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="12" Padding="20" VerticalAlignment="Top" Margin="0,0,25,0">
                <hc:ScrollViewer VerticalScrollBarVisibility="Hidden" IsInertiaEnabled="True">
                    <StackPanel>
                        <TextBlock Text="Сортировка" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <hc:ComboBox x:Name="SortCombo" SelectedIndex="0" Height="35" 
                                         SelectionChanged="Sort_Changed"
                                         BorderThickness="1" BorderBrush="#E0E0E0">
                                <ComboBoxItem Content="По цене"/>
                                <ComboBoxItem Content="По названию"/>
                            </hc:ComboBox>

                            <ToggleButton x:Name="SortDirectionBtn" Grid.Column="1" Margin="5,0,0,0"
                                          Height="35" Width="35" 
                                          Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                          Style="{StaticResource ToggleButtonCustom}" 
                                          Click="Sort_Changed" Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="4">
                                            <Path x:Name="icon" Data="{StaticResource SortIconGeom}" Fill="#555" Stretch="Uniform" Width="16" Height="16" RenderTransformOrigin="0.5,0.5">
                                                <Path.RenderTransform>
                                                    <ScaleTransform ScaleY="1"/>
                                                </Path.RenderTransform>
                                            </Path>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource GreenHoverBrush}"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GreenAccentBrush}"/>
                                                <Setter TargetName="icon" Property="Fill" Value="{StaticResource GreenAccentBrush}"/>
                                                <Setter TargetName="icon" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleY="-1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </Grid>

                        <Separator Background="#EEE" Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="⚲" Foreground="{StaticResource GreenAccentBrush}" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Фильтры" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Expander Header="ЦЕНА ЗА СУТКИ (BYN)" IsExpanded="True" BorderThickness="0" Style="{StaticResource FilterExpanderStyle}">
                            <StackPanel Margin="0,10,0,0">
                                <hc:RangeSlider x:Name="PriceRange" 
                                                Minimum="0" Maximum="500" 
                                                ValueStart="50" ValueEnd="300"
                                                Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <hc:TextBox Text="{Binding ValueStart, StringFormat=N2, ElementName=PriceRange, UpdateSourceTrigger=PropertyChanged}" 
                                                Height="35" BorderThickness="1" BorderBrush="#E0E0E0" 
                                                Background="White" Foreground="#333"/>

                                    <TextBlock Text="—" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>

                                    <hc:TextBox Text="{Binding ValueEnd, StringFormat=N2, ElementName=PriceRange, UpdateSourceTrigger=PropertyChanged}" 
                                                Height="35" BorderThickness="1" BorderBrush="#E0E0E0"
                                                Background="White" Foreground="#333" Grid.Column="2"/>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <Separator Background="#EEE" Margin="0,5"/>

                        <Expander Header="КЛАСС АВТО" IsExpanded="True" BorderThickness="0" Style="{StaticResource FilterExpanderStyle}">
                            <ItemsControl ItemsSource="{Binding Classes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Item.Name}" IsChecked="{Binding IsSelected}" 
                                                  Style="{StaticResource FilterCheckBoxStyle}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Separator Background="#EEE" Margin="0,5"/>

                        <Expander Header="МАРКА" IsExpanded="False" BorderThickness="0" Style="{StaticResource FilterExpanderStyle}">
                            <ItemsControl ItemsSource="{Binding Brands}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Item.Name}" IsChecked="{Binding IsSelected}" 
                                                  Style="{StaticResource FilterCheckBoxStyle}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Separator Background="#EEE" Margin="0,5"/>

                        <Expander Header="КУЗОВ" IsExpanded="False" BorderThickness="0" Style="{StaticResource FilterExpanderStyle}">
                            <ItemsControl ItemsSource="{Binding BodyTypes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Item.Name}" IsChecked="{Binding IsSelected}" 
                                                  Style="{StaticResource FilterCheckBoxStyle}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Separator Background="#EEE" Margin="0,5"/>

                        <Expander Header="ТОПЛИВО" IsExpanded="False" BorderThickness="0" Style="{StaticResource FilterExpanderStyle}">
                            <ItemsControl ItemsSource="{Binding FuelTypes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Item.Name}" IsChecked="{Binding IsSelected}" 
                                                  Style="{StaticResource FilterCheckBoxStyle}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Separator Background="#EEE" Margin="0,5"/>

                        <Expander Header="КОРОБКА" IsExpanded="True" BorderThickness="0" Style="{StaticResource FilterExpanderStyle}">
                            <ItemsControl ItemsSource="{Binding Transmissions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Item.Name}" IsChecked="{Binding IsSelected}" 
                                                  Style="{StaticResource FilterCheckBoxStyle}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Button Content="Применить" Background="{StaticResource GreenGradientBrush}" 
                                Style="{StaticResource ButtonPrimary}" Margin="0,10,0,0" BorderThickness="0"
                                Click="ApplyFilters_Click"/>
                        <Button Content="Сбросить" Style="{StaticResource ButtonDashed}" 
                                Margin="0,10,0,0" BorderBrush="#DDD" Foreground="Gray"
                                Click="ResetFilters_Click"/>
                    </StackPanel>
                </hc:ScrollViewer>
            </Border>

            <hc:ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" IsInertiaEnabled="True">
                <Grid>
                    <ItemsControl x:Name="CarsGridControl" Visibility="Visible">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" VerticalAlignment="Top"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="15" Margin="10" Cursor="Hand" MouseLeftButtonUp="Car_Click">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#E5E9F2" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <Grid Height="180">
                                            <Border CornerRadius="15,15,0,0" Background="#555"/>
                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill">
                                                <Image.Clip>
                                                    <RectangleGeometry Rect="0,0,275,180" RadiusX="15" RadiusY="15"/>
                                                </Image.Clip>
                                            </Image>

                                            <Button Style="{StaticResource EditButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15" 
                                                    ToolTip="Редактировать"
                                                    Visibility="{Binding EditVisibility}"
                                                    Click="EditCar_Click">
                                                <Button.Effect>
                                                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="5"/>
                                                </Button.Effect>
                                                <Path Data="{StaticResource EditIconGeom}" Fill="#333" Stretch="Uniform" Margin="8"/>
                                            </Button>

                                            <Border Background="{Binding StatusBgHex}" CornerRadius="6" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" Padding="10,5">
                                                <TextBlock Text="{Binding StatusName}" FontSize="12" FontWeight="Bold" Foreground="{Binding StatusColorHex}"/>
                                            </Border>
                                        </Grid>

                                        <StackPanel Margin="20">
                                            <TextBlock Text="{Binding BrandAndModel}" FontWeight="Bold" FontSize="16" Foreground="#333" Margin="0,0,0,5"/>

                                            <Grid Margin="0,0,0,15">
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="{Binding ClassName}" Foreground="Gray" FontSize="12"/>
                                                    <TextBlock Text=" • " Foreground="Gray" FontSize="12"/>
                                                    <TextBlock Text="{Binding BodyTypeName}" Foreground="Gray" FontSize="12"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding PricePerDay, StringFormat={}{0:N0} BYN}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="16" Foreground="{StaticResource GreenAccentBrush}"/>
                                            </Grid>

                                            <Separator Margin="0,0,0,15" Background="#F0F0F0"/>

                                            <Grid>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Path Data="{StaticResource CalendarIconGeom}" Fill="#555" Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding Year}" FontSize="13" Foreground="#555" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                                    <Path Data="{StaticResource ShieldIconGeom}" Fill="{Binding InsuranceIndicatorColor}" 
                                                          Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,8,0" ToolTip="Страховка"/>

                                                    <Path Data="{StaticResource WrenchIconGeom}" Fill="{Binding MaintenanceIndicatorColor}" 
                                                          Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center" ToolTip="Тех. обслуживание"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                    <Path Data="{StaticResource SpeedometerIconGeom}" Fill="#555" Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding Mileage, StringFormat={}{0:N0} км}" FontSize="13" Foreground="#555" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl x:Name="CarsListControl" Visibility="Collapsed">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="12" Margin="0,0,10,15" Cursor="Hand" MouseLeftButtonUp="Car_Click">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#E5E9F2" BlurRadius="5" ShadowDepth="1" Opacity="0.3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0" MinHeight="110">
                                            <Border CornerRadius="12,0,0,12" Background="#F5F5F5"/>

                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill" 
                                                   HorizontalAlignment="Left" Width="140">
                                                <Image.Clip>
                                                    <RectangleGeometry Rect="0,0,150,110" RadiusX="12" RadiusY="12"/>
                                                </Image.Clip>
                                            </Image>

                                            <Button Style="{StaticResource EditButtonStyle}"
                                                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" 
                                                    Width="24" Height="24" Cursor="Hand" ToolTip="Редактировать"
                                                    Visibility="{Binding EditVisibility}"
                                                    Click="EditCar_Click">
                                                <Path Data="{StaticResource EditIconGeom}" Fill="#333" Stretch="Uniform" Margin="6"/>
                                            </Button>
                                        </Grid>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                                            <TextBlock Text="{Binding BrandAndModel}" FontWeight="Bold" FontSize="16" Foreground="#333" Margin="0,0,0,5"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                <TextBlock Text="{Binding ClassName}" Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text=" • " Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text="{Binding BodyTypeName}" Foreground="Gray" FontSize="12"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <Path Data="{StaticResource CalendarIconGeom}" Fill="#777" Width="12" Height="12" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Year}" FontSize="12" Foreground="#555" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                                <Path Data="{StaticResource SpeedometerIconGeom}" Fill="#777" Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Mileage, StringFormat={}{0:N0} км}" FontSize="12" Foreground="#555" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                                <Path Data="{StaticResource ShieldIconGeom}" Fill="{Binding InsuranceIndicatorColor}" 
                                                      Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,8,0" ToolTip="Страховка"/>
                                                <Path Data="{StaticResource WrenchIconGeom}" Fill="{Binding MaintenanceIndicatorColor}" 
                                                      Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center" ToolTip="Обслуживание"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                                            <TextBlock Text="{Binding PricePerDay, StringFormat={}{0:N0} BYN}" FontWeight="Bold" FontSize="18" 
                                                       Foreground="{StaticResource GreenAccentBrush}" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                                            <Border Background="{Binding StatusBgHex}" CornerRadius="6" Padding="10,4" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding StatusName}" FontSize="11" FontWeight="Bold" Foreground="{Binding StatusColorHex}"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </hc:ScrollViewer>
        </Grid>
    </Grid>
</Page>