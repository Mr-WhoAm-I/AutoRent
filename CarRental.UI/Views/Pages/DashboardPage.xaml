<Page x:Class="CarRental.UI.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сводная аналитика" FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Сводная аналитика" FontSize="26" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Обзор ключевых показателей эффективности бизнеса" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="15" Height="120">
                <Border.Effect>
                    <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                </Border.Effect>
                <Grid Margin="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ОБЩАЯ ВЫРУЧКА" FontSize="11" FontWeight="Bold" Foreground="#90A4AE"/>
                        <TextBlock Text="126 000 ₽" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,5,0,5"/>
                        <TextBlock Text="Сумма всех платежей за год" FontSize="11" Foreground="#90A4AE"/>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40" CornerRadius="10" Background="#E0F7FA">
                        <TextBlock Text="💰" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="15" Height="120">
                <Border.Effect>
                    <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                </Border.Effect>
                <Grid Margin="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="АКТИВНЫЕ АРЕНДЫ" FontSize="11" FontWeight="Bold" Foreground="#90A4AE"/>
                        <TextBlock Text="6" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,5,0,5"/>
                        <TextBlock Text="Автомобилей сейчас у клиентов" FontSize="11" Foreground="#90A4AE"/>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40" CornerRadius="10" Background="#E3F2FD">
                        <TextBlock Text="🚗" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="4" Background="White" CornerRadius="15" Height="120">
                <Border.Effect>
                    <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                </Border.Effect>
                <Grid Margin="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ЗАГРУЗКА ПАРКА" FontSize="11" FontWeight="Bold" Foreground="#90A4AE"/>
                        <TextBlock Text="20%" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,5,0,5"/>
                        <TextBlock Text="Эффективность использования" FontSize="11" Foreground="#90A4AE"/>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40" CornerRadius="10" Background="#F3E5F5">
                        <TextBlock Text="📈" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                </Border.Effect>
                <Grid Margin="20">
                    <TextBlock Text="Финансовая динамика" FontSize="16" FontWeight="Bold" Foreground="#333" VerticalAlignment="Top"/>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.3">
                        <TextBlock Text="[График доходов и расходов]" FontSize="16"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                </Border.Effect>
                <Grid Margin="20">
                    <TextBlock Text="Состояние автопарка" FontSize="16" FontWeight="Bold" Foreground="#333" VerticalAlignment="Top"/>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.8">
                        <Grid Width="150" Height="150">
                            <Ellipse Stroke="#00C6FF" StrokeThickness="15" Margin="5"/>
                            <Ellipse Stroke="#FFB300" StrokeThickness="15" Margin="5" StrokeDashArray="2 3"/>
                            <TextBlock Text="5 / 29" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="18"/>
                        </Grid>
                        <TextBlock Text="ВСЕГО АВТО" HorizontalAlignment="Center" FontSize="10" Foreground="Gray" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>