<Page x:Class="CarRental.UI.Views.Pages.DirectoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Справочники" FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Управление справочниками" FontSize="26" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Настройка параметров системы" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
            </Border.Effect>

            <TabControl BorderThickness="0" Background="Transparent">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Марки авто">
                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="+ Добавить" Width="120" Height="35" Style="{StaticResource TealButton}" FontSize="14"/>
                            <Button Content="✎ Изменить" Width="120" Height="35" Margin="10,0" Background="White" BorderBrush="#DDD" BorderThickness="1"/>
                            <Button Content="🗑 Удалить" Width="120" Height="35" Background="White" BorderBrush="#DDD" BorderThickness="1" Foreground="Red"/>
                        </StackPanel>
                        <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Width="50"/>
                                <DataGridTextColumn Header="Название марки" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Классы">
                    <Grid Margin="0,20,0,0">
                        <TextBlock Text="Таблица классов..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Типы кузова">
                    <Grid Margin="0,20,0,0">
                        <TextBlock Text="Таблица кузовов..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Характеристики">
                    <Grid Margin="0,20,0,0">
                        <TextBlock Text="Топливо и Трансмиссии..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Page>