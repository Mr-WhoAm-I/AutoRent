<Page x:Class="CarRental.UI.Views.Pages.DirectoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      Title="Справочники" FontFamily="Segoe UI" Loaded="Page_Loaded">

    <Grid Margin="0,0,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Справочники" FontSize="26" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,20,0">
                <ListBox x:Name="MenuListBox" BorderThickness="0" Background="Transparent" 
                         Padding="10" SelectionChanged="MenuListBox_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem Content="Марки автомобилей" Tag="Марка"/>
                    <ListBoxItem Content="Классы автомобилей" Tag="КлассАвтомобиля"/>
                    <ListBoxItem Content="Типы кузова" Tag="ТипКузова"/>
                    <ListBoxItem Content="Типы трансмиссии" Tag="ТипТрансмиссии"/>
                    <ListBoxItem Content="Типы топлива" Tag="ТипТоплива"/>
                    <ListBoxItem Content="Статусы" Tag="СтатусАвто"/>
                    <ListBoxItem Content="Роли сотрудников" Tag="Роль"/>
                </ListBox>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="RefGrid" Grid.Row="0"
                          Style="{StaticResource ModernDataGrid}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True" 
                          CanUserDeleteRows="True"
                          IsReadOnly="False" 
                          PreviewKeyDown="RefGrid_PreviewKeyDown">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="180"/>

                        <DataGridTextColumn x:Name="ColDesc" 
                                        Header="Описание" 
                                        Binding="{Binding Description}" 
                                        Width="*"
                                        ElementStyle="{StaticResource WrapTextCell}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <TextBlock Text="* Delete - удалить, Enter - применить ввод" 
                               Foreground="Gray" VerticalAlignment="Center" Margin="0,0,20,0" FontStyle="Italic"/>

                    <Button Content="Отменить" Style="{StaticResource ButtonDashed}" Width="100" Height="40" Margin="0,0,10,0" Click="Cancel_Click"/>
                    <Button Content="Сохранить изменения" Style="{StaticResource ButtonPrimary}" Background="{StaticResource GreenGradientBrush}" 
                            BorderThickness="0" Height="40" Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>