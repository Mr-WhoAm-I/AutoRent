<Page x:Class="CarRental.UI.Views.Pages.ManagerDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Рабочее место менеджера" FontFamily="Segoe UI" Background="#F5F7FA">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Оперативный центр" FontSize="26" FontWeight="Bold" Foreground="#333"/>
                <TextBlock Text="Управление текущими задачами и парком" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Height="80" Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#6366F1" Offset="0"/>
                                        <GradientStop Color="#4F46E5" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <Grid Margin="25,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="#30FFFFFF">
                                        <TextBlock Text="+" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                        <TextBlock Text="Выдать автомобиль" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                        <TextBlock Text="Новый договор аренды" Foreground="White" Opacity="0.8" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2" Height="80" Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                                </Border.Effect>
                                <Grid Margin="20,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="#F3F4F6">
                                        <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" 
                                              Fill="#6366F1" Stretch="Uniform" Width="18" Height="18"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                        <TextBlock Text="Проверить наличие" Foreground="#333" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="Свободные авто (Календарь)" Foreground="Gray" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Border Background="White" CornerRadius="12" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" 
                                          Fill="#6366F1" Width="20" Height="20" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <TextBlock Text="Оперативный план на сегодня" FontSize="16" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border HorizontalAlignment="Right" Background="#F3F4F6" CornerRadius="5" Padding="10,5">
                                    <TextBlock Text="26 декабря" FontSize="12" Foreground="Gray"/>
                                </Border>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="↗ ОЖИДАЕМЫЕ ВЫДАЧИ (1)" FontSize="11" FontWeight="Bold" Foreground="#10B981" Margin="0,0,0,15"/>

                                    <Border Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                        <Grid>
                                            <StackPanel>
                                                <Grid>
                                                    <TextBlock Text="Петров Иван" FontWeight="Bold" FontSize="14"/>
                                                    <Border Background="#E0F2F1" CornerRadius="4" HorizontalAlignment="Right" Padding="6,2">
                                                        <TextBlock Text="Готов" FontSize="10" Foreground="#009688" FontWeight="Bold"/>
                                                    </Border>
                                                </Grid>
                                                <TextBlock Text="+7 (900) 111-22-33" FontSize="12" Foreground="Gray" Margin="0,2,0,10"/>

                                                <Border Background="#EEF2FF" CornerRadius="6" Padding="10,8">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Kia Rio" FontWeight="SemiBold" Foreground="#4F46E5"/>
                                                        <TextBlock Text=" • K999KK777" Foreground="#6B7280" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="↙ ОЖИДАЕМЫЕ ВОЗВРАТЫ (1)" FontSize="11" FontWeight="Bold" Foreground="#6366F1" Margin="0,0,0,15"/>

                                    <Border Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="8" Padding="15">
                                        <Grid>
                                            <StackPanel>
                                                <Grid>
                                                    <TextBlock Text="Смирнова Анна" FontWeight="Bold" FontSize="14"/>
                                                    <Button HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                                        <Path Data="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56-.35-.12-.74-.03-1.01.24l-2.2 2.2c-3.23-1.61-5.81-4.19-7.41-7.41l2.2-2.2c.27-.27.35-.66.24-1.01-.36-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 2 3 2.45 3 3c0 9.39 7.61 17 17 17 .55 0 1-.45 1-1v-2.62c0-.55-.45-1-.1-1z" 
                                                              Fill="#9CA3AF" Width="14" Height="14" Stretch="Uniform"/>
                                                    </Button>
                                                </Grid>
                                                <TextBlock Text="+7 (900) 999-88-77" FontSize="12" Foreground="Gray" Margin="0,2,0,10"/>

                                                <Border Background="#F3F4F6" CornerRadius="6" Padding="10,8">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="BMW X5" FontWeight="SemiBold" Foreground="#374151"/>
                                                        <TextBlock Text=" • X001XX777" Foreground="#6B7280" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2">

                    <Border Background="White" CornerRadius="12" Padding="15" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="!" Foreground="#EF4444" FontWeight="Bold" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Просроченные (1)" FontWeight="Bold" Foreground="#333"/>
                            </StackPanel>

                            <Border Background="#FEF2F2" BorderBrush="#FEE2E2" BorderThickness="1" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="Петров" FontWeight="SemiBold" Foreground="#7F1D1D"/>
                                        <Border Background="#FECACA" CornerRadius="4" HorizontalAlignment="Right" Padding="5,2">
                                            <TextBlock Text="+2 дн" FontSize="10" Foreground="#B91C1C" FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock Text="Camry | B456BB777" FontSize="11" Foreground="#991B1B" Margin="0,2,0,10"/>

                                    <Grid>
                                        <TextBlock Text="Срочно" FontSize="10" Foreground="#EF4444" VerticalAlignment="Center"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Cursor="Hand">
                                            <Path Data="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z" 
                                                  Fill="#4B5563" Width="12" Height="12" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Позвонить" FontSize="11" Foreground="#4B5563" TextDecorations="Underline"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="15">
                        <Border.Effect>
                            <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Path Data="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z" 
                                      Fill="#F59E0B" Width="14" Height="14" Stretch="Uniform"/>
                                <TextBlock Text="В сервисе (1)" FontWeight="Bold" Foreground="#333" Margin="10,0,0,0"/>
                            </StackPanel>

                            <Border Background="#FFFBEB" BorderBrush="#FEF3C7" BorderThickness="1" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="Mercedes-Benz E-Class" FontWeight="SemiBold" FontSize="12" Foreground="#92400E"/>
                                        <TextBlock Text="E777KX777" HorizontalAlignment="Right" FontSize="10" Foreground="#B45309"/>
                                    </Grid>
                                    <TextBlock Text="Замена масла АКПП, фильтров" FontSize="11" Foreground="#D97706" Margin="0,2,0,5" TextWrapping="Wrap"/>
                                    <TextBlock Text="Готовность: 20.08.2023" FontSize="10" Foreground="#B45309" HorizontalAlignment="Right" Opacity="0.7"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>