<Page x:Class="CarRental.UI.Views.Pages.ManagerDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Рабочее место менеджера" FontFamily="Segoe UI" Background="#F5F7FA" Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Оперативный центр" FontSize="26" FontWeight="Bold" Foreground="#333"/>
                <TextBlock x:Name="TxtSubtitle" Text="Загрузка..." FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Height="80" Cursor="Hand" BorderThickness="0" Click="BtnIssue_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="12" Background="{StaticResource GreenGradientBrush}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#00C853" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <Grid Margin="25,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="#30FFFFFF">
                                        <TextBlock Text="+" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                        <TextBlock Text="Выдать автомобиль" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                        <TextBlock Text="Оформить новый договор" Foreground="White" Opacity="0.8" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2" Height="80" Cursor="Hand" BorderThickness="0" Click="BtnNewClient_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                                </Border.Effect>
                                <Grid Margin="20,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="#F3F4F6">
                                        <Path Data="{StaticResource UserIconGeom}" 
                                              Fill="#6366F1" Stretch="Uniform" Width="18" Height="18"
                                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                        <TextBlock Text="Новый клиент" Foreground="#333" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="Регистрация в базе" Foreground="Gray" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Border Background="White" CornerRadius="12" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📅  Оперативный план" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border HorizontalAlignment="Right" Background="#F3F4F6" CornerRadius="5" Padding="10,5">
                                    <TextBlock x:Name="TxtTodayDate" Text="29 декабря" FontSize="12" Foreground="Gray"/>
                                </Border>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="HeaderIssues" Text="↗ ОЖИДАЕМЫЕ ВЫДАЧИ (0)" FontSize="11" FontWeight="Bold" Foreground="#10B981" Margin="0,0,0,15"/>

                                    <ItemsControl x:Name="ListIssues">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10" Cursor="Hand"
                                                        MouseDown="Item_MouseDown">
                                                    <StackPanel IsHitTestVisible="False">
                                                        <TextBlock Text="{Binding ClientFullName}" FontWeight="Bold" FontSize="14"/>
                                                        <TextBlock Text="{Binding ClientPhone}" FontSize="12" Foreground="Gray" Margin="0,2,0,10"/>
                                                        <Border Background="#EEF2FF" CornerRadius="6" Padding="10,8">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding CarName}" FontWeight="SemiBold" Foreground="#4F46E5"/>
                                                                <TextBlock Text="{Binding CarPlate, StringFormat=' • {0}'}" Foreground="#6B7280"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock x:Name="EmptyIssues" Text="Нет задач" Foreground="#CCC" FontStyle="Italic" Visibility="Collapsed"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock x:Name="HeaderReturns" Text="↙ ОЖИДАЕМЫЕ ВОЗВРАТЫ (0)" FontSize="11" FontWeight="Bold" Foreground="#6366F1" Margin="0,0,0,15"/>

                                    <ItemsControl x:Name="ListReturns">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10" Cursor="Hand"
                                                        MouseDown="Item_MouseDown">
                                                    <StackPanel IsHitTestVisible="False">
                                                        <TextBlock Text="{Binding ClientFullName}" FontWeight="Bold" FontSize="14"/>
                                                        <TextBlock Text="{Binding ClientPhone}" FontSize="12" Foreground="Gray" Margin="0,2,0,10"/>
                                                        <Border Background="#F3F4F6" CornerRadius="6" Padding="10,8">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding CarName}" FontWeight="SemiBold" Foreground="#374151"/>
                                                                <TextBlock Text="{Binding CarPlate, StringFormat=' • {0}'}" Foreground="#6B7280"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock x:Name="EmptyReturns" Text="Нет задач" Foreground="#CCC" FontStyle="Italic" Visibility="Collapsed"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2">

                    <Border Background="White" CornerRadius="12" Padding="15" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="!" Foreground="#EF4444" FontWeight="Bold" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock x:Name="HeaderOverdue" Text="Просроченные (0)" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>

                                <Button Content="⚡ Авто-штраф" Margin="15,0,0,0" Padding="8,0" Height="24" FontSize="11"
                                        Style="{StaticResource ButtonDashed}" BorderBrush="#EF4444" Foreground="#EF4444"
                                        ToolTip="Автоматически начислить штрафы за просрочку (через курсор БД)"
                                        Click="BtnAutoFine_Click"/>
                            </StackPanel>

                            <ItemsControl x:Name="ListOverdue">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FEF2F2" BorderBrush="#FEE2E2" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,10" Cursor="Hand"
                                                MouseDown="Item_MouseDown">
                                            <StackPanel IsHitTestVisible="False">
                                                <Grid>
                                                    <TextBlock Text="{Binding ClientFullName}" FontWeight="SemiBold" Foreground="#7F1D1D"/>
                                                    <Border Background="#FECACA" CornerRadius="4" HorizontalAlignment="Right" Padding="5,2">
                                                        <TextBlock Text="ДОЛГ" FontSize="10" Foreground="#B91C1C" FontWeight="Bold"/>
                                                    </Border>
                                                </Grid>
                                                <TextBlock Text="{Binding CarInfo}" FontSize="11" Foreground="#991B1B" Margin="0,2,0,5"/>
                                                <TextBlock Text="{Binding ClientPhone}" FontSize="11" Foreground="#7F1D1D" TextDecorations="Underline"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock x:Name="EmptyOverdue" Text="Всё чисто" Foreground="#CCC" FontStyle="Italic" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="15">
                        <Border.Effect>
                            <DropShadowEffect Color="#E5E9F2" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="🛠" Foreground="#F59E0B" FontWeight="Bold" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock x:Name="HeaderService" Text="В сервисе (0)" FontWeight="Bold" Foreground="#333"/>
                            </StackPanel>

                            <ItemsControl x:Name="ListService">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFFBEB" BorderBrush="#FEF3C7" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                                            <StackPanel>
                                                <Grid>
                                                    <TextBlock Text="{Binding CarName}" FontWeight="SemiBold" FontSize="12" Foreground="#92400E"/>
                                                    <TextBlock Text="{Binding PlateNumber}" HorizontalAlignment="Right" FontSize="10" Foreground="#B45309"/>
                                                </Grid>
                                                <TextBlock Text="{Binding ServiceType}" FontSize="11" Foreground="#D97706" Margin="0,2,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock x:Name="EmptyService" Text="Нет машин в ремонте" Foreground="#CCC" FontStyle="Italic" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>