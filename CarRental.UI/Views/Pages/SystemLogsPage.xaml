<Page x:Class="CarRental.UI.Views.Pages.SystemLogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Журнал событий" FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Журнал событий" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
            <TextBlock Text="История действий пользователей" FontSize="14" Foreground="Gray" VerticalAlignment="Bottom" Margin="15,0,0,4"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
            </Border.Effect>
            <TextBlock Text="Здесь будет таблица логов и кнопки бэкапа..." 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="#CCC" FontSize="16"/>
        </Border>
    </Grid>
</Page>