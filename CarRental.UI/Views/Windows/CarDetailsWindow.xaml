<Window x:Class="CarRental.UI.Views.Windows.CarDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Детали автомобиля" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="8,5">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="White" CornerRadius="15" BorderBrush="#E0E0E0" BorderThickness="1" Margin="20" >
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.25" Color="#000"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20" Background="Transparent" MouseDown="Window_MouseDown">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtTitle" Text="Hyundai Solaris" FontSize="28" FontWeight="Bold" Foreground="#333"/>
                        <Border x:Name="BadgeClass" Background="#E8F5E9" CornerRadius="6" Padding="10,4" Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtClass" Text="Эконом" Foreground="{StaticResource GreenAccentBrush}" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                    </StackPanel>
                    <TextBlock x:Name="TxtPlate" Text="A 123 AA - 7" Foreground="Gray" FontSize="16" Margin="2,5,0,0"/>
                </StackPanel>

                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Style="{StaticResource WindowControlButtonStyle}" Foreground="#999" Click="Close_Click"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Border Height="220" CornerRadius="12" Background="#F5F7FA" ClipToBounds="True" Margin="0,0,0,25">
                        <Image x:Name="ImgCar" Stretch="UniformToFill"/>
                    </Border>

                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#FAFAFA" CornerRadius="10" Padding="15">
                            <StackPanel>
                                <TextBlock Text="ГОД ВЫПУСКА" FontSize="11" Foreground="#90A4AE" FontWeight="Bold"/>
                                <TextBlock x:Name="TxtYear" Text="2022" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="#FAFAFA" CornerRadius="10" Padding="15">
                            <StackPanel>
                                <TextBlock Text="ПРОБЕГ" FontSize="11" Foreground="#90A4AE" FontWeight="Bold"/>
                                <TextBlock x:Name="TxtMileage" Text="45 000 км" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <TextBlock Text="Характеристики" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="10" Padding="0,5">
                        <StackPanel>
                            <Grid Margin="15,10">
                                <TextBlock Text="Кузов" Foreground="Gray"/>
                                <TextBlock x:Name="TxtBody" Text="Седан" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                            <Separator Background="#F5F5F5"/>
                            <Grid Margin="15,10">
                                <TextBlock Text="Коробка передач" Foreground="Gray"/>
                                <TextBlock x:Name="TxtTrans" Text="Автомат" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                            <Separator Background="#F5F5F5"/>
                            <Grid Margin="15,10">
                                <TextBlock Text="Тип топлива" Foreground="Gray"/>
                                <TextBlock x:Name="TxtFuel" Text="Бензин" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                            <Separator Background="#F5F5F5"/>
                            <Grid Margin="15,10">
                                <TextBlock Text="Стоимость в сутки" Foreground="Gray"/>
                                <TextBlock x:Name="TxtPricePerDay" Text="70 BYN" FontWeight="Bold" Foreground="{StaticResource GreenAccentBrush}" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="12" Padding="25">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock x:Name="TxtCalendarMonth" Text="Декабрь 2025" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Content="‹" HorizontalAlignment="Left" Style="{StaticResource WindowControlButtonStyle}" 
                                    Foreground="#555" FontSize="18" Click="PrevMonth_Click"/>
                            <Button Content="›" HorizontalAlignment="Right" Style="{StaticResource WindowControlButtonStyle}" 
                                    Foreground="#555" FontSize="18" Click="NextMonth_Click"/>
                        </Grid>

                        <UniformGrid Grid.Row="1" Columns="7" Margin="0,0,0,10">
                            <TextBlock Text="Пн" Foreground="#999" HorizontalAlignment="Center"/>
                            <TextBlock Text="Вт" Foreground="#999" HorizontalAlignment="Center"/>
                            <TextBlock Text="Ср" Foreground="#999" HorizontalAlignment="Center"/>
                            <TextBlock Text="Чт" Foreground="#999" HorizontalAlignment="Center"/>
                            <TextBlock Text="Пт" Foreground="#999" HorizontalAlignment="Center"/>
                            <TextBlock Text="Сб" Foreground="#999" HorizontalAlignment="Center"/>
                            <TextBlock Text="Вс" Foreground="#999" HorizontalAlignment="Center"/>
                        </UniformGrid>

                        <UniformGrid x:Name="CalendarGrid" Grid.Row="2" Columns="7" VerticalAlignment="Top"/>

                        <WrapPanel Grid.Row="3" Margin="0,20,0,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                                <Ellipse Width="8" Height="8" Fill="#4F46E5" Margin="0,0,5,0"/>
                                <TextBlock Text="Аренда" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                                <Ellipse Width="8" Height="8" Fill="#EF4444" Margin="0,0,5,0"/>
                                <TextBlock Text="Ремонт" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                                <Ellipse Width="8" Height="8" Fill="#9C27B0" Margin="0,0,5,0"/>
                                <TextBlock Text="Бронь" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource GreenAccentBrush}" Margin="0,0,5,0"/>
                                <TextBlock Text="Выбрано" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                        </WrapPanel>

                        <Border Grid.Row="4" Background="#F9FAFB" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <StackPanel>
                                    <TextBlock x:Name="TxtTotalDays" Text="ВЫБРАНО: 0 СУТ" FontSize="11" FontWeight="Bold" Foreground="#90A4AE"/>
                                    <TextBlock x:Name="TxtDates" Text="Выберите даты" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtTotalPrice" Text="0 BYN" FontSize="24" FontWeight="Bold" 
                                           Foreground="{StaticResource GreenAccentBrush}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Button x:Name="BtnAction" Grid.Row="5" Content="Выберите даты" IsEnabled="False"
                                Height="50" FontSize="16" FontWeight="SemiBold"
                                Style="{StaticResource ButtonPrimary}" Background="{StaticResource GreenGradientBrush}" BorderThickness="0"
                                Click="BtnAction_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>