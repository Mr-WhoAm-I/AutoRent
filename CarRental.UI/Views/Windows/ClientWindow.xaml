<Window x:Class="CarRental.UI.Views.Windows.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="Клиент" Height="750" Width="1150"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown" FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="YearListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bd" Background="Transparent" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E0F2F1"/>
                                <Setter Property="Foreground" Value="#009688"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="15" BorderBrush="#E0E0E0" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.25"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Width="60" Height="60" CornerRadius="30" Background="#4F46E5" Margin="0,0,20,0">
                    <TextBlock x:Name="TxtInitials" Text="ИП" FontSize="24" FontWeight="Bold" Foreground="White" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtFullName" Text="Петров Иван Иванович" FontSize="26" FontWeight="Bold" Foreground="#333"/>

                        <Button Style="{StaticResource EditButtonStyle}" 
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                ToolTip="Редактировать данные клиента"
                                Click="EditClient_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="TxtPhone" Text="+375 (29) 111-22-33" Foreground="Gray" FontSize="14"/>
                        <TextBlock Text=" • " Foreground="Gray" Margin="5,0"/>
                        <TextBlock x:Name="TxtEmail" Text="ivanov@mail.com" Foreground="Gray" FontSize="14"/>
                        <TextBlock Text=" • " Foreground="Gray" Margin="5,0"/>
                        <TextBlock x:Name="TxtAge" Text="Возраст: 30 лет" Foreground="Gray" FontSize="14"/>
                        <TextBlock Text=" • " Foreground="Gray" Margin="5,0"/>
                        <TextBlock x:Name="TxtExp" Text="Стаж: 5 лет" Foreground="Gray" FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="2" Content="✕" Style="{StaticResource WindowControlButtonStyle}" 
                        Foreground="#999" Click="Close_Click" VerticalAlignment="Top"/>
            </Grid>

            <Border Grid.Row="1" Background="White" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="12" Padding="20" Margin="0,0,0,30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,15">
                        <TextBlock x:Name="TxtActivityTitle" Text="История активности" FontWeight="Bold" FontSize="16"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock x:Name="TxtActivityStats" Text="0 дней аренды" 
                                       Background="#F3F4F6" Padding="8,4" FontSize="12" Foreground="#555"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,20,0">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Margin="0,30,10,0" VerticalAlignment="Top">
                                    <TextBlock Text="Пн" FontSize="10" Foreground="#AAA" Height="13" Margin="0,0,0,2"/>
                                    <TextBlock Text="" FontSize="10" Foreground="#AAA" Height="13" Margin="0,0,0,2"/>
                                    <TextBlock Text="Ср" FontSize="10" Foreground="#AAA" Height="13" Margin="0,0,0,2"/>
                                    <TextBlock Text="" FontSize="10" Foreground="#AAA" Height="13" Margin="0,0,0,2"/>
                                    <TextBlock Text="Пт" FontSize="10" Foreground="#AAA" Height="13"/>
                                </StackPanel>

                                <Grid x:Name="ActivityGrid"/>
                            </StackPanel>
                        </ScrollViewer>

                        <ListBox x:Name="ListYears" Grid.Column="1" Width="60" BorderThickness="0" Background="Transparent"
                                 ItemContainerStyle="{StaticResource YearListBoxItem}"
                                 SelectionChanged="ListYears_SelectionChanged"/>
                    </Grid>

                    <ItemsControl x:Name="LegendControl" Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                    <Grid Margin="0,0,5,0">
                                        <Rectangle Width="10" Height="10" RadiusX="2" RadiusY="2" Fill="{Binding ColorBrush}"/>
                                        <Rectangle Width="10" Height="10" RadiusX="2" RadiusY="2" 
                                                   Fill="{StaticResource HatchedBrush}" 
                                                   Visibility="{Binding IsHatched, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>
                                    <TextBlock Text="{Binding Name}" FontSize="11" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ИСТОРИЯ ПОЕЗДОК" FontSize="14" FontWeight="Bold" Foreground="#90A4AE" Margin="0,0,0,10"/>

                <DataGrid x:Name="HistoryGrid" Grid.Row="1" Style="{StaticResource ModernDataGrid}" CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Период" Width="110" SortMemberPath="StartDate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StartDate, StringFormat=dd.MM.yyyy}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding EndDate, StringFormat=dd.MM.yyyy}" Foreground="#90A4AE" FontSize="11" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Автомобиль" Width="250" SortMemberPath="CarTitle">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="CarInfo_Click" Background="Transparent">
                                        <TextBlock Text="{Binding CarTitle}" FontWeight="Bold" Foreground="#4F46E5" TextDecorations="Underline"/>
                                        <TextBlock Text="{Binding CarDetails}" FontSize="11" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Тип" Binding="{Binding Status}" Width="100" FontWeight="SemiBold"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding Cost, StringFormat={}{0:N2} BYN}" Width="100"/>
                        <DataGridTextColumn Header="Отзыв / Комментарий" Binding="{Binding Note}" Width="*" ElementStyle="{StaticResource WrapTextCell}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Window>