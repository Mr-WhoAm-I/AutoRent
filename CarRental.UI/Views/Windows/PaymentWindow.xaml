<Window x:Class="CarRental.UI.Views.Windows.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="Платеж" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">
    <Border Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1" Margin="5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity="0.2"/>
        </Border.Effect>
        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="Платеж" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                <hc:DatePicker x:Name="DatePick" hc:InfoElement.Placeholder="Дата платежа" Margin="0,0,0,10" Height="50" BorderThickness="1" BorderBrush="#C0C0C0"/>

                <TextBox x:Name="TxtSum" Tag="Сумма" Style="{StaticResource FloatingHintTextBox}"/>

                <ComboBox x:Name="ComboType" Tag="Тип платежа" Style="{StaticResource FloatingHintComboBox}">
                    <ComboBoxItem Content="Аванс"/>
                    <ComboBoxItem Content="Полная оплата"/>
                    <ComboBoxItem Content="Доплата"/>
                    <ComboBoxItem Content="Штраф"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button Content="Отмена" Style="{StaticResource ButtonDashed}" Click="Close_Click" Margin="0,0,10,0"/>
                    <Button Content="Сохранить" Style="{StaticResource ButtonPrimary}" Click="Save_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>