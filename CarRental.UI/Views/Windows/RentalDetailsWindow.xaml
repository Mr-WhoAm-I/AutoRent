<Window x:Class="CarRental.UI.Views.Windows.RentalDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="Карточка аренды" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown" FontFamily="Segoe UI">

    <Border Background="White" CornerRadius="15" BorderBrush="#DDD" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.25"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Карточка аренды" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>

                    <Button Style="{StaticResource EditButtonStyle}" 
                            Margin="15,0,0,0" 
                            VerticalAlignment="Center"
                            ToolTip="Редактировать параметры аренды"
                            Click="EditRental_Click"/>
                </StackPanel>

                <GroupBox Header="Клиент" Style="{StaticResource GroupBoxOriginal}" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Border Width="40" Height="40" CornerRadius="20" Background="#EEE" Margin="0,0,10,0">
                                <Path Data="{StaticResource UserIconGeom}" Fill="Gray" Stretch="Uniform" Margin="10"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="TxtClientName" Text="ФИО" FontWeight="Bold"/>
                                <TextBlock x:Name="TxtClientPhone" Text="+375..." Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Автомобиль" Style="{StaticResource GroupBoxOriginal}" Margin="0,0,0,15">
                    <StackPanel>
                        <Image x:Name="ImgCar" Height="120" Stretch="UniformToFill" Margin="0,0,0,10">
                            <Image.Clip>
                                <RectangleGeometry Rect="0,0,280,120" RadiusX="5" RadiusY="5"/>
                            </Image.Clip>
                        </Image>
                        <TextBlock x:Name="TxtCarName" Text="Toyota Camry" FontWeight="Bold" FontSize="16"/>
                        <TextBlock x:Name="TxtCarPlate" Text="1234 AA-7" Foreground="Gray"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Оформил сотрудник" Style="{StaticResource GroupBoxOriginal}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="TxtEmpName" Text="Менеджеров М.М." FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtEmpPos" Text="Менеджер" Foreground="Gray" FontSize="12"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Период и статус" Style="{StaticResource GroupBoxOriginal}">
                    <StackPanel>
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="Начало:" Foreground="Gray"/>
                            <TextBlock x:Name="TxtDateStart" Text="01.01.2025" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                        </Grid>
                        <Grid>
                            <TextBlock Text="Окончание:" Foreground="Gray"/>
                            <TextBlock x:Name="TxtDateEnd" Text="05.01.2025" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                        </Grid>

                        <TextBlock x:Name="TxtStatus" Text="АКТИВНА" Foreground="{StaticResource GreenAccentBrush}" 
                                   FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBox x:Name="TxtComment" Height="80" Tag="Отзыв" 
                                     Style="{StaticResource FloatingHintTextBox}" 
                                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,10"/>

                                <Button Content="Сохранить" 
                                    Style="{StaticResource ButtonPrimary}" 
                                    HorizontalAlignment="Right"
                                    Width="100" Height="35" FontSize="13"
                                    Click="SaveComment_Click"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Style="{StaticResource WindowControlButtonStyle}" Foreground="#999" Click="Close_Click"/>

                <Border Background="#F9FAFB" CornerRadius="10" Padding="20" Margin="0,0,30,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="ИТОГО" Foreground="Gray" FontSize="12"/>
                            <TextBlock x:Name="TxtTotalCost" Text="0.00 BYN" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>

                        <Rectangle Grid.Column="1" Width="1" Fill="#DDD" Margin="15,5"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="ОПЛАЧЕНО" Foreground="Gray" FontSize="12"/>
                            <TextBlock x:Name="TxtPaid" Text="0.00 BYN" FontSize="22" FontWeight="Bold" Foreground="#00C853"/>
                        </StackPanel>

                        <Rectangle Grid.Column="3" Width="1" Fill="#DDD" Margin="15,5"/>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="ДОЛГ" Foreground="Gray" FontSize="12"/>
                            <TextBlock x:Name="TxtDebt" Text="0.00 BYN" FontSize="22" FontWeight="Bold" Foreground="#F44336"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="Штрафы" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button Content="+ Штраф" HorizontalAlignment="Right" Style="{StaticResource ButtonDashed}" 
                                    Height="26" Padding="10,0" Click="AddFine_Click"/>
                        </Grid>

                        <DataGrid x:Name="FineGrid" Grid.Row="1" Style="{StaticResource ModernDataGrid}">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Редактировать" Click="EditFine_Click"/>
                                    <MenuItem Header="Удалить" Click="DeleteFine_Click" Foreground="Red"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="90"/>
                                <DataGridTextColumn Header="Причина" Binding="{Binding Reason}" Width="*"/>
                                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat={}{0:N2}}" Width="80" FontWeight="Bold"/>
                                <DataGridCheckBoxColumn Header="Опл." Binding="{Binding IsPaid}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="Платежи" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button Content="+ Платеж" HorizontalAlignment="Right" Style="{StaticResource ButtonDashed}" 
                                    Height="26" Padding="10,0" Click="AddPayment_Click"/>
                        </Grid>

                        <DataGrid x:Name="PaymentGrid" Grid.Row="1" Style="{StaticResource ModernDataGrid}">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Редактировать" Click="EditPayment_Click"/>
                                    <MenuItem Header="Удалить" Click="DeletePayment_Click" Foreground="Red"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="90"/>
                                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="*"/>
                                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat={}{0:N2}}" Width="80" FontWeight="Bold"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>